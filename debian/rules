#!/usr/bin/make -f

build: build-stamp

build-stamp:
	dh_testdir
	export GOPATH=`pwd`/.. && export GIT_SSL_NO_VERIFY=true && export CGO_ENABLED=0 && go get -v -d && go build xupload.go sessions.go
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	rm -f xupload
	dh_clean

install: build
	dh_testdir
	dh_prep
	dh_install xupload /usr/sbin
	dh_install conf/xupload.conf /etc/xupload

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installinit
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
